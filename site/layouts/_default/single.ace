= content main
  .main role="main"
    {{ if ne .Type "index" }}
    h1.page-title {{ .Title }}
    {{ if .Params.subtitle }}
    h2.page-subtitle {{ .Params.subtitle}}
    {{ end }}
    p {{ if .Params.author }}By {{ .Params.author }}{{ end }}
    {{ if .Params.Date }}
      span.article-date {{ .Params.Date.Format "January 2, 2006" }}
    {{ end }}
    {{ end }}
    {{ .Content }}
