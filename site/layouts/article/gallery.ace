li.card
  {{ if .Params.hero }}
    a href="{{ .Permalink}}"
      .gallery-hero.card-hero style="background-image: url({{ .Site.BaseURL }}/images/hero/medium/{{ .Params.hero.name }}); background-position: {{ if .Params.hero.position }}{{ .Params.hero.position }}{{ else }}center center{{ end }};"
  {{ end }}
  .card-text
    p
      a href="{{ .Permalink }}" {{ .Title }}
