{
  "name": "southeast",
  "version": "1.0.0",
  "description": "Source code the the Southeast Region website of the U.S. Fish and Wildlife Service",
  "main": "index.js",
  "watch": {
    "svg": "src/images/svg/*.svg",
    "hugo:dev": {
      "patterns": [
        "site/**/*"
      ],
      "extensions": "html,md,ace,svg,pdf"
    }
  },
  "scripts": {
    "test": "mocha",
    "watch": "npm-watch",
    "images": "npm run images:hero & npm run images:pages",
    "watch:images": "npm run watch:images:hero & npm run watch:images:pages",
    "images:hero": "node build/hero",
    "images:pages": "node build/images",
    "watch:images:hero": "cross-env WATCH=true node build/hero",
    "watch:images:pages": "cross-env WATCH=true node build/images",
    "watch:json": "cross-env WATCH=true node build/minify-json",
    "watch:csv": "cross-env WATCH=true node build/csv-to-json",
    "watch:sass": "node-sass -w src/scss/styles.scss dist/css/styles.css",
    "prewatchers": "npm run mkdist",
    "watchers": "npm run watch:json & npm run watch:csv & npm run watch:images & npm run watch:sass & npm run frontmatter",
    "svg": "svg-sprite --si true --symbol-dest '' --svg-xmldecl false --ss sprite.svg -sD site/layouts/partials/ src/images/svg/*.svg",
    "build:sass": "node-sass --output-style compressed src/scss/styles.scss | postcss -u autoprefixer -o dist/css/styles.css",
    "json": "node build/minify-json",
    "csv": "node build/csv-to-json",
    "frontmatter": "node build/frontmatter",
    "mkdist": "node build/create-dist",
    "hugo:dev": "node build/hugo -- http://localhost:3000/",
    "hugo:stage": "node build/hugo -- https://intranet.fws.gov/region4/demo/",
    "hugo:pro": "node build/hugo -- https://www.fws.gov/southeast/",
    "serve": "browser-sync start --server 'dist' --files 'dist/**/*' --log-level 'silent' --reload-delay=1500",
    "start": "npm run watch & npm run serve",
    "build": "npm run json && npm run csv && npm run images && npm run svg && npm run build:sass",
    "deploy": "npm run build && npm run hugo:pro",
    "stage": "npm run build && npm run hugo:stage"
  },
  "keywords": [
    "Government",
    "USFWS"
  ],
  "author": "Roy Hewitt, @r0yhewitt",
  "license": "SAX-PD",
  "devDependencies": {
    "autoprefixer": "^6.6.1",
    "browser-sync": "^2.18.6",
    "chokidar": "^1.4.3",
    "concat-map": "0.0.1",
    "cross-env": "^3.1.4",
    "csvtojson": "^1.1.2",
    "glob": "^7.0.3",
    "gray-matter": "^2.0.2",
    "imagemin": "^5.2.2",
    "imagemin-mozjpeg": "^6.0.0",
    "jsonlint": "^1.6.2",
    "jsonminify": "^0.4.1",
    "lodash.foreach": "^4.5.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.1.2",
    "moment": "^2.17.1",
    "ncp": "^2.0.0",
    "node-sass": "^4.2.0",
    "npm-watch": "^0.1.7",
    "postcss-cli": "^2.5.1",
    "replace-in-file": "^1.1.3",
    "rimraf": "^2.5.2",
    "sharp": "^0.15.1",
    "svg-sprite": "^1.3.1",
    "svg-sprite-generator": "0.0.7",
    "titlecase": "^1.1.2",
    "yamljs": "^0.2.6"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/USFWS/southeast.git"
  },
  "bugs": {
    "url": "https://github.com/USFWS/southeast/issues"
  },
  "homepage": "https://github.com/USFWS/southeast#readme"
}
